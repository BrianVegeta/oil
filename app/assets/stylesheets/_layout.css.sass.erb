body#front
  background: image-url('background.png') no-repeat fixed
  background-position: right top
  background-color: black
  nav.navbar-default
    background-color: rgba(210, 195, 195, 0.4)
    border: 0
    .container
      padding-top: 7px
      padding-bottom: 7px
      
      .navbar-brand, .navbar-nav li a
        color: white
      .dropdown-menu li a
        color: #333333
    .divider
      height: 2px
      margin-top: 0px
      background-image: -webkit-linear-gradient(left, #d8225e, #b73794 25%, #7254b6 50%, #3981d1 74%, #3bbfee)
      background-image: linear-gradient(to right, #d8225e, #b73794 25%, #7254b6 50%, #3981d1 74%, #3bbfee)
      box-shadow: none
    .navbar-brand
      background-image: url('<%= asset_path("sc-logo@white.png") %>')
      background-repeat: no-repeat
      background-size: Auto 120px
      padding: 0
      height: 100px
      width: 300px
      img
        background-color: white
        padding: 5px
    .navbar-toggle
      @media (max-width: 768px)
        margin-top: 55px
    ul.navbar-nav
      li
        a
          padding-top: 70px
          padding-bottom: 10px

          @media (max-width: 768px)
            padding-top: 10px
            padding-bottom: 5px            
  .footer
    color: white
    margin-top: 60px
    background-color: rgba(210, 195, 195, 0.4)
    border: 0
    .container
      padding: 20px
      p
        text-align: center

body#admin
  background: none
  background-color: none
  nav.navbar-default
    background-color: #f8f8f8