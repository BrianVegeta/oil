#home.row
  .col-xs-12.col-sm-10.col-sm-offset-1
    .row
      .col-xs-12.col-sm-7
        .introduction-panel.panel
          %h1.introduction-title
            %em= t('index.introduction.head')
          %p= t('index.introduction.body_1')
          %p= t('index.introduction.body_2')
          %h1.introduction-title.service
            %em= t('index.product_service.head')
          %p= t('index.product_service.body')
      .col-xs-12.col-sm-5
        .news-panel.panel
          .list-group
            - if @news.size == 0
              .list-group-item 暫無最新消息
            - @news.each do |news|
              = link_to news_path(news), class: 'list-group-item' do
                = truncate(news.title, length: 20)
                %span.news-date= news.updated_at.strftime("%Y/%m/%d")

:css
  .redbg {
    background-color: red;
  }
  .bluebg {
    background-color: blue;
  }
