:css
  table .thumbnail {
    width: 60px;
    height: 60px;
    margin: 0;
    padding: 1px;
  }
  table .thumbnail > img {
    width: 100%;
    height: 100%; 
  }
- image_data = "data:image/svg+xml;base64,"
%h1 產品列表
= link_to '新增產品', new_admin_product_path
%table.table
  %thead
    %tr
      %th 置頂
      %th ID
      %th 圖片
      %th 產品名
      %th 新增於
      %th 更新於
      %th 狀態
      %th
  %tbody
    - @admin_products.each do |admin_product|
      %tr{:style => "#{(admin_product.top_rate.present?) ? 'background-color: #DAEFCC;' : ''}"}
        %td= admin_product.top_rate
        %td= admin_product.id
        %td
          - if admin_product.photo
            .thumbnail
              %img{:src => "#{admin_product.photo.avatar.url(:thumb)}"}/
          - else
            .thumbnail
              %img{:src => image_data}/
        %td= admin_product.zh_TW_title
        %td= admin_product.created_at.strftime("%Y/%m/%d %H:%M")
        %td= admin_product.updated_at.strftime("%Y/%m/%d %H:%M")
        %td
          - if admin_product.state.nil?
            = '下架'
          - else
            = admin_product.human_state_name
        %td
          = link_to '編輯', edit_admin_product_path(admin_product)
          = link_to '刪除', admin_product_path(admin_product), method: :delete, data: { confirm: '確定刪除?' }
