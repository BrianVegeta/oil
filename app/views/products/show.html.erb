<% 
  default_image = 'data:image/svg+xml;base64,' 
%>
<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <div class="thumbnail">
      <img data-src="holder.js/100%x200" alt="100%x200" style="height: 200px; width: 100%; display: block;" src="<%= (@product.photo.nil?) ? default_image : @product.photo.avatar.url(:medium) %>" data-holder-rendered="true">
      <div class="caption">
        <h4>
          <%= @product.trans_title %><br>
          <small><%= @product.trans_content %></small>
        </h4>
        <div class="area-description"><%=raw @product.trans_description %></div>
        <div class="area-applicable-type">
          <h5><%= t('product.applicable_type') %></h5>
          <% @product.applicable_types.each do |type| %>
            <span>
              <span class="glyphicon glyphicon-asterisk" aria-hidden="true"></span>
              <%= type %>
            </span>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>

<style type="text/css">
.area-description {
  padding: 10px;
  margin-bottom: 10px;
  border: 1px solid #dddddd;
  border-radius: 1px;
}

.area-applicable-type {
  padding: 10px;
  margin-bottom: 10px;
  border: 1px solid #dddddd;
  border-radius: 1px;
}

span.glyphicon.glyphicon-asterisk {
  color: red;
}
</style>